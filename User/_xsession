#!/bin/sh
#
# File: $HOME/.xsession
#  - Executed by xdm/gdm/kdm at login

if [ "$1" != "__second_stage__" ]; then
    # first stage, wrap everything with gpg-agent
    exec /usr/bin/gpg-agent --daemon $0 __second_stage__ $@
fi

# second stage
shift
echo second stage: $@

#wicd-gtk -t &
nm-applet --sm-disable &
bluedevil-monolithic
#blueman-applet &
gensig -q
owncloud &
xss-lock -- /usr/bin/i3lock --color=222222 -n &
konsole &
xinput disable "SynPS/2 Synaptics TouchPad"
exec $@
