# maintain spacing between certain elements
use_spacer left

# set to yes if you want conky to be forked in the background
background no

use_xft yes

# Xft font when Xft is enabled
xftfont Droid Sans Mono-8
#xftfont Andale Mono-9
#xftfont Clean-8
#xftfont cubicfive10:pixelsize=8
#xftfont squaredance10:pixelsize=14
#xftfont swf!t_v02:pixelsize=10

# Text alpha when using Xft
xftalpha 1
mail_spool $MAIL

# Update interval in seconds
update_interval 1.0

# Create own window instead of using desktop (required in nautilus)
#own_window no
own_window yes
own_window_transparent yes
own_window_type desktop

# Use double buffering (reduces flicker, may not work for everyone)
double_buffer yes

# Minimum size of text area
minimum_size 280 5

# Draw shades?
draw_shades yes

# Draw outlines?
draw_outline no # amplifies text

# Draw borders around text
draw_borders no

# Stippled borders?
stippled_borders 0

# border margins
border_inner_margin 9

# border width
border_width 1

maximum_width 300
# Default colors and also border colors, grey90 == #e5e5e5
#default_color grey90
default_color white
default_shade_color black
default_outline_color DarkGrey

# Text alignment, other possible values are commented
#alignment top_left
alignment top_right
#alignment bottom_left
#alignment bottom_right

# Gap between borders of screen and text
gap_x 24
gap_y 24

# Subtract file system buffers from used memory?
no_buffers yes

# set to yes if you want all text to be in uppercase
uppercase no

# stuff after 'TEXT' will be formatted on screen

TEXT
${color #ffcb48}$nodename$color      ${color #828282}$sysname $kernel on $machine$color
   ${color #98c2c7}Batt:$color   ${battery}, ${battery_time}, ${smapi_bat_power 0}

${color #ffcb48}PROCESSING$color
   ${color #98c2c7}CPU:$color     ${freq_g}GHz   ${platform thinkpad_hwmon temp 1}Â°C  ${platform thinkpad_hwmon fan 1} RPM
   ${cpu cpu1}% ${color #78af78}${cpubar cpu1}$color
   ${cpu cpu2}% ${color #78af78}${cpubar cpu2}$color
   ${color #78af78}${cpugraph 78af78 a3a3a3}

   ${color #98c2c7}NAME             PID       CPU%      MEM%
   ${color #e5e5e5}${top name 1} ${top pid 1}    ${top cpu 1}    ${top mem 1}
