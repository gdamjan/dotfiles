if [ -z "$_XPROFILE" ]; then
export _XPROFILE=1

export XCURSOR_THEME=Obsidian
export OOO_FORCE_DESKTOP=gnome
export BROWSER=/opt/firefox/firefox
export EDITOR=vim

# keyboard
setxkbmap -layout gb,mk \
   -option grp:switch  -option grp:caps_toggle
xrdb -load ~/.Xresources

/usr/bin/gensig -q
eval $(/usr/bin/gpg-agent --daemon)
fi
